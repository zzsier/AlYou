<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ico_personal_data_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ico_welline" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_below="@+id/imageView1"
        android:layout_height="40.0dip" >

        <Button
            android:id="@+id/btn_friend_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@null"
            android:gravity="center"
            android:text=" 好友"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_club_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@null"
            android:gravity="center"
            android:text="公会"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_fans_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@null"
            android:gravity="center"
            android:text="关注"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_tweet_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@null"
            android:gravity="center"
            android:text="粉丝"
            android:textColor="#ffffff"
            android:textSize="15dp" />
    </LinearLayout>

      <ImageView
        android:id="@+id/contact_image"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/linearLayout1"
        android:src="@drawable/ico_welline" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@+id/linearLayout1" >

        <RelativeLayout
            android:id="@+id/image_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/image_guangbiao0"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:background="#01000000"
                android:src="@drawable/ico_guanzhuliebiaoguangbiao"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/image_guangbiao1"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#01000000"
                android:src="@drawable/ico_guanzhuliebiaoguangbiao"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/image_guangbiao2"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:src="@drawable/ico_guanzhuliebiaoguangbiao"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/image_guangbiao3"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#01000000"
                android:src="@drawable/ico_guanzhuliebiaoguangbiao"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/contact_image" >

    </FrameLayout>

</RelativeLayout>