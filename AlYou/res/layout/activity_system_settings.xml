<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ico_personal_data_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_top_bar"
        android:background="@color/common_top_bar_black" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/common_tab_bg"
            android:onClick="back" >

            <Button
                android:id="@+id/back_bt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:onClick="back"
                android:text="返回"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ico_welline" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ico_welline" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/ico_settings_04" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="25dp"
                    android:text="消息推送"
                    android:textSize="15sp" />

                <Switch
                    android:id="@+id/switch_message_send"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_friend_varify"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="@drawable/ico_settings_03"
                android:paddingLeft="25dp"
                android:paddingTop="15dp"
                android:text="好友验证"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/system_setting_blacklist"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/ico_settings_04"
                android:paddingLeft="25dp"
                android:paddingTop="15dp"
                android:text="黑名单"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_version_test"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="@drawable/ico_settings_03"
                android:paddingLeft="25dp"
                android:paddingTop="15dp"
                android:text="版本测试"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/system_setting_yijianfankui"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="@drawable/ico_settings_04"
                android:paddingLeft="25dp"
                android:paddingTop="15dp"
                android:text="意见反馈"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/system_settings_about_us"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="@drawable/ico_settings_03"
                android:paddingLeft="25dp"
                android:paddingTop="15dp"
                android:text="关于我们"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/settings_advice_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="@drawable/ico_settings_04"
                android:paddingLeft="25dp"
                android:paddingTop="15dp"
                android:text="亲，给个评价吧！"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/ico_settings_03" />

            <TextView
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/ico_settings_04" />

            <TextView
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/ico_settings_03" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>